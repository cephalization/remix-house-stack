{
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "format": "rome format --write \"./\"",
    "lint": "turbo run lint; rome check \"./\"",
    "test": "turbo run test"
  },
  "devDependencies": {
    "rome": "^10.0.0",
    "turbo": "latest"
  }
}